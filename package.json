{
  "name": "my-webapp-boilerplate",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run test"
    }
  },
  "scripts": {
    "test": "jest --coverage",
    "dev": "npm run test && webpack-dev-server --mode development --host 0.0.0.0",
    "build": "npm run test && webpack --mode production --progress",
    "prettier-all": "prettier --write ./**/*.{ts,tsx,js,jsx,html}"
  },
  "jest": {
    "globals": {
      "MODE": "test"
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/catsass19/My-Webapp-Boilerplate.git"
  },
  "author": "catsass19@hotmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/catsass19/My-Webapp-Boilerplate/issues"
  },
  "homepage": "https://github.com/catsass19/My-Webapp-Boilerplate#readme",
  "dependencies": {
    "@types/lodash-es": "^4.17.3",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-loadable": "^5.5.1",
    "lodash": "^4.17.15",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-loadable": "^5.5.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "cache-loader": "^4.1.0",
    "clean-terminal-webpack-plugin": "^2.0.5",
    "clean-webpack-plugin": "^3.0.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "file-loader": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "thread-loader": "^2.1.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.2",
    "webpack": "4.39.3",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0"
  }
}
