{
  "name": "my-webapp-boilerplate",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-push": "npm run test"
    }
  },
  "scripts": {
    "test": "jest --coverage",
    "dev": "npm run test && webpack-dev-server --mode development --host 0.0.0.0",
    "build": "npm run test && webpack --mode production --progress",
    "electron": "npm run test && export BASE_URL=./ && webpack --mode production --target electron-renderer && electron ./electron.js"
  },
  "jest": {
    "globals": {
      "MODE": "test"
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/catsass19/My-Webapp-Boilerplate.git"
  },
  "author": "catsass19@hotmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/catsass19/My-Webapp-Boilerplate/issues"
  },
  "homepage": "https://github.com/catsass19/My-Webapp-Boilerplate#readme",
  "dependencies": {
    "@types/lodash-es": "^4.17.3",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@types/react-loadable": "^5.5.1",
    "lodash": "^4.17.10",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-loadable": "^5.5.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "cache-loader": "^1.2.5",
    "clean-terminal-webpack-plugin": "^1.1.0",
    "clean-webpack-plugin": "^0.1.19",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.15",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "thread-loader": "^1.2.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^4.5.0",
    "tslint": "^5.14.0",
    "typescript": "^3.4.1",
    "webpack": "4.28.4",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-pwa-manifest": "^3.8.0"
  }
}
